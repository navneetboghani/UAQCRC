<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CamelMasterApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ProThemeOrange" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.AppCompat.toolbar">
        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
    </style>
    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
        <item name="color">@color/white</item>
    </style>


    <style name="CustomDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/custom_checkbox</item>
        <item name="android:button">@null</item>
    </style>
    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>



    <style name="SnapTimePicker" />

    <style name="SnapTimePicker.Title">
        <item name="android:textColor">@color/snap_time_picker_white</item>
        <item name="android:textSize">@dimen/snap_time_picker_text_size_large</item>
    </style>

    <style name="SnapTimePicker.Content">
        <item name="android:textColor">@color/snap_time_picker_black</item>
        <item name="android:textSize">@dimen/snap_time_picker_text_size_medium</item>
    </style>

    <style name="SnapTimePicker.Button">
        <item name="android:textColor">@color/snap_time_picker_default_primary</item>
        <item name="android:textSize">@dimen/snap_time_picker_text_size_medium</item>
        <item name="android:background">
            @drawable/selector_button_translucent_black_round
        </item>
        <item name="android:minWidth">@dimen/snap_time_picker_button_minimum_width</item>
        <item name="android:paddingEnd">@dimen/snap_time_picker_margin_padding_large</item>
        <item name="android:paddingStart">@dimen/snap_time_picker_margin_padding_large</item>
    </style>

    <style name="SnapTimePicker.HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/snap_time_picker_divider_size</item>
        <item name="android:background">@color/snap_time_picker_extra_light_gray</item>
    </style>


</resources>