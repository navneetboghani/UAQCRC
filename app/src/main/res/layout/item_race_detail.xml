<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/_13sp"
        android:paddingTop="@dimen/_5dp"
        android:paddingRight="@dimen/_13sp"
        android:paddingBottom="@dimen/_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/simpleTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:id="@+id/raceName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/topleftcell"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/race_name1"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tv_raceName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toprightcell"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/race_name"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow
                android:id="@+id/secondRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:id="@+id/race_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/race_no"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tv_race_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/race_id"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow

                android:id="@+id/thirdRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:id="@+id/no_of_round"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/no_of_round"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tv_noOfround"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/no_of_round"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow

                android:id="@+id/fourthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/startdate"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tv_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/startdate"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow

                android:id="@+id/fifthhRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomleftcell"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/enddate"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tv_EndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottomrightcell"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="@string/enddate"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_delete"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/img_schedule"
            app:layout_constraintStart_toEndOf="@+id/img_schedule"
            app:layout_constraintTop_toTopOf="@+id/img_schedule"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/img_users"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_add_user"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/img_schedule"
            app:layout_constraintEnd_toStartOf="@+id/img_schedule"
            app:layout_constraintTop_toTopOf="@+id/img_schedule"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/img_schedule"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_add_schedule"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/simpleTableLayout"
            app:layout_constraintStart_toStartOf="@+id/simpleTableLayout"
            app:layout_constraintTop_toBottomOf="@+id/simpleTableLayout"
            tools:ignore="SpUsage" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>