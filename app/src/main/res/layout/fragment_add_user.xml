<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragment.AddUserFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textDirection="ltr"
            android:textColor="@color/lighttext"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"
            android:paddingStart="8dp"
            android:layout_marginTop="@dimen/_2dp"
            android:hint="@string/username"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/Gray"
            android:textDirection="ltr"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textDirection="ltr"
            android:textColor="@color/lighttext"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"
            android:paddingStart="8dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:maxLines="1"
            android:textColorHint="@color/Gray"
            android:textSize="@dimen/_16sp"
            android:textDirection="ltr"
            android:layout_marginTop="@dimen/_2dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textDirection="ltr"
            android:textColor="@color/lighttext"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"
            android:paddingStart="8dp"
            android:inputType="text"
            android:hint="@string/email"
            android:maxLines="1"
            android:textColorHint="@color/Gray"
            android:textSize="@dimen/_16sp"
            android:textDirection="ltr"
            android:layout_marginTop="@dimen/_2dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_participant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_of_participant"
            android:textColor="@color/lighttext"
            android:textDirection="ltr"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_participant_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"
            android:paddingStart="8dp"
            android:textDirection="ltr"
            android:inputType="text"
            android:textColorHint="@color/Gray"
            android:hint="@string/name_of_participant"
            android:maxLines="1"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_2dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            android:text="@string/mobile_no"
            android:textColor="@color/lighttext"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"
            android:paddingStart="8dp"
            android:textColorHint="@color/Gray"
            android:textDirection="ltr"
            android:inputType="number"
            android:hint="@string/mobile_no"
            android:maxLines="1"
            android:maxLength="10"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_2dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_camel_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            android:text="@string/camel_no"
            android:textColor="@color/lighttext"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_camel_no."
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"
            android:paddingStart="8dp"
            android:textDirection="ltr"
            android:inputType="number"
            android:hint="@string/camel_no"
            android:textColorHint="@color/Gray"
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_2dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            android:text="@string/role"
            android:textColor="@color/lighttext"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

<!--        <EditText-->
<!--            android:id="@+id/et_role"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:backgroundTint="@color/Gray"-->
<!--            android:textDirection="ltr"-->
<!--            android:inputType="textPassword"-->
<!--            android:hint="role"-->
<!--            android:textColorHint="@color/Gray"-->
<!--            android:maxLines="1"-->
<!--            android:maxEms="10"-->
<!--            android:textSize="@dimen/_16sp"-->
<!--            android:layout_marginTop="@dimen/_2dp"-->
<!--            android:textColor="@color/black" />-->
           
        <Spinner
            android:id="@+id/role_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundtextview"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:textColor="@color/lighttext"
                android:textDirection="ltr"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintBottom_toBottomOf="@+id/tv_subscription"
                app:layout_constraintStart_toEndOf="@+id/tv_subscription"
                app:layout_constraintTop_toTopOf="@+id/tv_subscription"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="@dimen/_8dp"
            android:textColor="@color/white"
            android:text="@string/save"
            android:textSize="18sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>






</androidx.core.widget.NestedScrollView>